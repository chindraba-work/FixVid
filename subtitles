#
# Command script to launch subtitle creation commands with all the
# proper parameters set. May launch the extraction multiple times if
# there are multiple occurrences of the configuration variables.
#
# Accepts 1 optional argument:
#     group_num   Which setting group to use in extraction.
#                 A value of "0", or no argument, will cycle through
#                 all the available groups, creating subtitles for each.
#                 Any other number will create one subtitle file using
#                 the group number to determine which settings to use.
#
# Reads fixvid.conf for:
#     subs_source_n
#     subs_stream_n
#     subs_label_n
#     subs_title_n
#     subs_type_n
#     _n
#         where "n" is an integer number beginning at "1"
#
# Displays nothing.
#
# Generates 0 files:
#

group='subs';
required='stream';
group_fields='source stream label title type lang';

# Load the configuration file
[[ -s fixvid.conf ]] && . fixvid.conf || exit 4;

# Read the optional argument.
[[ $1 ]] && traget_num=$1 || traget_num=0;

# The function to extract the subtitle file(s)
function get_subtitles {
  # Check for, and set the source file
  [[ $subs_source ]] || subs_source="$video_source";
  # Check for, and set the language for the subtitles
  [[ $subs_lang ]] || subs_lang="$video_lang";
  # Set the output filename base
  work_prefix="${work_files}-subs-$subs_label";

  case ${subs_type,,} in
    text|subrip|srt|ass|aas  )
      source "$fixvid_dir/extract-subtitles-text"
      ;;
    dvd_sub*|vobsub )
      source "$fixvid_dir/extract-subtitles-dvd"
      ;;
    * )
      exit 3
      ;;
  esac
}

process_group get_subtitles $group $required $traget_num $group_fields;

wait;
